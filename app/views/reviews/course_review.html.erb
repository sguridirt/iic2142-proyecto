<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header bg-primary text-white">
          <h1 class="text-center">Nueva Reseña de Curso</h1>
        </div>

        <div class="card-body">
          <%= form_with(model: @course_review, local: true, class: "form-horizontal") do |form| %>

            <% if @course_review.errors.any? %>
              <div id="error_explanation" class="alert alert-danger">
                <h2><%= pluralize(@course_review.errors.count, "error") %> impidieron que se guardara la reseña:</h2>
                <ul>
                  <% @course_review.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <%= form.label :title, "Título", class: "form-label" %>
              <%= form.text_field :title, required: true, class: "form-control" %>
            </div>

            <div class="mb-3">
                <%= form.label :comment, "Contenido", class: "form-label" %>
                <%= form.text_area :comment, required: true, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= form.label :rating, "Puntuación (1-10)", class: "form-label" %>
              <%= form.number_field :rating, in: 1..10, required: true, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= form.label :course_id, "Seleccionar Curso", class: "form-label" %>
              <%= form.collection_select :course_id, current_user.student.courses, :id, :title, { prompt: "Seleccione un curso" }, { required: true, class: "form-control" } %>
            </div>

            <div class="text-center">
              <%= form.submit "Enviar Reseña", class: "btn btn-primary btn-lg mt-3" %>
            </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
