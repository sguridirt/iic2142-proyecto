<section class="container-fluid px-2">
  <div class="row mt-4">
    <div class="col-md-12">
      <h3>Rese単as de Profesor</h3>
      <ul class="list-group">
        <% filtered_teacher_reviews = current_user.teacher? ? @teacher_reviews.where(teacher: current_user.teacher) : @teacher_reviews %>
        <% if filtered_teacher_reviews.any? %>
          <% filtered_teacher_reviews.each do |review| %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <div style="text-align: justify;">
                <strong><%= review.title %></strong>
                <br>
                <small><%= review.comment %></small>
              </div>
              <span class="badge bg-primary rounded-pill"><%= review.rating %>/10</span>
            </li>
          <% end %>
        <% else %>
          <li class="list-group-item">No hay rese単as de profesor disponibles.</li>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-md-12">
      <h3>Rese単as de Cursos</h3>
      <ul class="list-group">
        <% filtered_course_reviews = current_user.teacher? ? @course_reviews.where(course: current_user.teacher.courses) : @course_reviews %>
        <% if filtered_course_reviews.any? %>
          <% filtered_course_reviews.each do |review| %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <div style="text-align: justify;">
                <strong><%= review.title %></strong>
                <br>
                <small><%= review.comment %></small>
              </div>
              <div class="d-flex align-items-center">
                <span class="me-3" style="min-width: 100px; text-align: right;"><%= Course.find(review.course_id).title %></span>
                <span class="badge bg-primary rounded-pill"><%= review.rating %>/10</span>
              </div>
            </li>
          <% end %>
        <% else %>
          <li class="list-group-item">No hay rese単as de cursos disponibles.</li>
        <% end %>
      </ul>
    </div>
  </div>
</section>
