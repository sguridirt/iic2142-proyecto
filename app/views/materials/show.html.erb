<section class="container-fluid p-4">
  <div class="row mb-4">
    <div class="col-md-12">
      <h1 class="mb-2"><%= @material.name %></h1>
      <div class="card">
        <div class="card-body">
          <p class="card-text"><strong>Descripci√≥n:</strong> <%= @material.description %></p>
          <p class="card-text"><strong>Tipo:</strong> <%= @material.material_type.name %></p>
          <p class="card-text"><strong>Curso:</strong> <%= @material.course.title %></p>
          
          <% if @material.document.attached? %>
            <div class="mt-3">
              <h6>Documento adjunto:</h6>
              <%= link_to "Ver documento", rails_blob_path(@material.document, disposition: "inline"), class: "btn btn-info", target: "_blank" %>
            </div>
          <% end %>
          
          <%= link_to "Volver al curso", course_path(@material.course), class: "btn btn-primary mt-3" %>
        </div>
      </div>
    </div>
  </div>
</section>
