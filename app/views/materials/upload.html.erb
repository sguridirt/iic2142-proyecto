<div class="container mt-5">
  <h1>Subir Material</h1>
  <%= form_with(model: [@course, @material], local: true, multipart: true) do |f| %> 
    <div class="form-group">
      <%= f.label :name, "Nombre" %>
      <%= f.text_field :name, class: "form-control", placeholder: "Nombre del material" %>
    </div>

    <div class="form-group mt-3">
      <%= f.label :description, "DescripciÃ³n" %>
      <%= f.text_area :description, class: "form-control", placeholder: "DescripciÃ³n del material" %>
    </div>

    <div class="form-group mt-3">
      <%= f.label :material_type_id, "Tipo de Material" %>
      <%= f.collection_select :material_type_id, MaterialType.all, :id, :name, { prompt: 'Selecciona un tipo' }, { class: "form-control" } %>
    </div>
  
    <div class="form-group mt-3">
      <%= f.label :document, "Archivo" %>
      <%= f.file_field :document, class: "form-control" %>
    </div>

    <%= f.hidden_field :course_id, value: @course.id %>

    <div class="mt-4 d-flex justify-content-between">
      <%= link_to "Volver", course_path(@course), class: "btn btn-secondary" %> 
      <%= f.submit "Guardar", class: "btn btn-success" %>
    </div>
  <% end %>
</div>
