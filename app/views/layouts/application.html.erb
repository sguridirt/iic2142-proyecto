<!DOCTYPE html>
<html>
  <head>
    <title>LearningApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <p class="notice"><% notice %></p>
    <p class="alert"><% alert %></p>
    <nav class="navbar navbar-expand">
      <div class="container-fluid">
        <span class="navbar-brand mb-0 h1">DCCanvas</span>
        <div class="collapse navbar-collapse justify-content-end">
          <ul class="navbar-nav me-2 mb-2 mb-lg-0">
          <!-- Enlace de Inicio -->
          <li class="nav-item">
            <%= link_to "Inicio", root_path, class: "nav-link" %>
          </li>
          <!-- Enlace de Cursos -->
          <li class="nav-item">
            <%= link_to "Cursos", "#", class: "nav-link" %>
          </li>
          <% if current_user %>
            <!-- Enlace de Mi perfil -->
            <li class="nav-item">
              <%= link_to "Mi perfil", user_settings_path, class: "nav-link" %>
            </li>
            <!-- Enlace de Cerrar sesión -->
            <li class="nav-item">
              <%= link_to "Cerrar sesión", destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-link" %>
            </li>
          <% else %>
            <!-- Enlace de Ingresar (si no está autenticado) -->
            <li class="nav-item">
              <%= link_to 'Ingresar', new_user_session_url, class: "nav-link" %>
            </li>
            <% end %>
            </li>
          </ul>
        </div>
      </div>
      </div>
    </nav>    

    <%= yield %>
  </body>
</html>
