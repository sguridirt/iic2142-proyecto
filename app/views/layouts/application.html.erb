<!DOCTYPE html>
<html>
  <head>
    <title>LearningApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <nav class="navbar navbar-expand">
      <div class="container-fluid">
        <%= link_to "DCCanvas", root_path, :class => "navbar-brand mb-0 h1" %>
        <div class="collapse navbar-collapse justify-content-end">
          <ul class="navbar-nav me-2 mb-2 mb-lg-0">
            <!-- Enlace de Cursos -->
            <li class="nav-item">
              <%= link_to "Cursos", "#", class: "nav-link" %>
            </li>        
            <% if current_user %>
              <li class="nav-item">
                <%= link_to "Mi perfil", user_settings_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Cerrar sesiÃ³n", destroy_user_session_path, data: { turbo_method: :delete }, :class => "btn btn-outline-secondary me-2" %>
              </li>
            <% else %>
              <li class="nav-item">
               <%= link_to 'Ingresar', new_user_session_url, :class => "btn btn-outline-primary me-2" %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
      </div>
    </nav>
    <% if notice %>
      <div class="alert alert-primary" role="alert"><%= notice %></div>
    <% end %>
    <% if alert %>
      <div class="alert alert-danger" role="alert"><%= alert %></div>
    <% end %>

    <%= yield %>
  </body>
</html>
