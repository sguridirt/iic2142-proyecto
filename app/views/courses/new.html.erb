<h1>Crear nuevo curso</h1>



<%= form_with model: @course, local: true do |form| %>
  <div class="form-group mb-3">
    <%= form.label :title, "Nombre del curso" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :description, "Descripción del curso" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :course_type_id, "Tipo de curso" %>
    <%= form.select :course_type_id, options_from_collection_for_select(@course_types, "id", "name"), class: "form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :start_date, "Fecha de inicio" %>
    <%= form.date_field :start_date, class: "form-control" %>
  </div>

  <div class="form-group mb-5">
    <%= form.label :end_date, "Fecha de término" %>
    <%= form.date_field :end_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "Guardar", class: "btn btn-primary" %>
    <%= link_to "Cancelar", home_path, class: "btn btn-secondary" %>
  </div>
<% end %>