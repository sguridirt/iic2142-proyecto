<h1>Cursos</h1>

<div class="search-container">
  <%= form_with url: courses_path, method: :get, local: true do |form| %>
    <div class="input-group">
      <%= form.text_field :query, placeholder: "Buscar por nombre de curso o profesor", class: "form-control" %>
      <%= form.submit "Buscar", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Título</th>
      <th>Descripción</th>
      <th>Profesor</th>
      <% if current_user && current_user.user_role_id == 1 %> <!-- Solo para estudiantes -->
        <th>Acciones</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.title %></td>
        <td><%= course.description %></td>
        <td><%= course.teacher.name if course.teacher.present? %></td>
        
        <% if current_user && current_user.user_role_id == 1 %> <!-- Solo para estudiantes -->
          <td>
            <%= link_to "Solicitar unirse", request_join_course_path(course), method: :post, class: "btn btn-primary" %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>


