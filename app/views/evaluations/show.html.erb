<section class="container-fluid px-2">
  <div class="row">
    <div class="col-md-12">
      <h1 class="mb-2"><%= @evaluation.name %></h1>
      <p class="mb-1"><strong>Duración:</strong> <%= @evaluation.duration %> minutos</p>
      <p class="mb-1"><strong>Día:</strong> <%= @evaluation.start_date.strftime('%d/%m/%Y') %></p>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-md-12">
      <h3 class="mb-2">Preguntas</h3>
      <ul class="list-group">
        <% @evaluation.evaluation_questions.each do |question| %>
          <li class="list-group-item">
            <%= question.content %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</section>