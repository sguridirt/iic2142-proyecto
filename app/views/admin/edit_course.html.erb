<%# app/views/admin/edit_course.html.erb %>
<h1>Editar Curso</h1>

<%= form_with model: @course, url: update_admin_course_path(@course), method: :patch, local: true do |form| %>
  <div class="form-group">
    <%= form.label :title, "Título del Curso" %>
    <%= form.text_field :title, class: "form-control", value: @course.title %>
  </div>

  <div class="form-group">
    <%= form.label :description, "Descripción" %>
    <%= form.text_area :description, class: "form-control", value: @course.description %>
  </div>

  <div class="form-group">
    <%= form.label :start_date, "Fecha de Inicio" %>
    <%= form.date_field :start_date, class: "form-control", value: @course.start_date.strftime("%Y-%m-%d") if @course.start_date %>
  </div>

  <div class="form-group">
    <%= form.label :end_date, "Fecha de Finalización" %>
    <%= form.date_field :end_date, class: "form-control", value: @course.end_date.strftime("%Y-%m-%d") if @course.end_date %>
  </div>

  <div class="form-group">
    <%= form.label :course_type_id, "Tipo de Curso" %>
    <%= form.collection_select :course_type_id, CourseType.all, :id, :name, { prompt: "Selecciona un tipo de curso" }, class: "form-control" %>
  </div>

  <%= form.submit "Actualizar Curso", class: "btn btn-primary" %>
<% end %>

<%= link_to 'Volver al Inicio', home_path, class: "btn btn-secondary" %>
