<h1>Crear Reclamo</h1>

<%= form_with model: @complaint, local: true do |form| %>
  <div class="form-group">
    <%= form.label :title, "Título" %>
    <%= form.text_field :title, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :content, "Descripción" %> <!-- Cambiado de :description a :content -->
    <%= form.text_area :content, class: "form-control", required: true %> <!-- Cambiado -->
  </div>

  <div class="form-group">
    <%= form.submit "Enviar Reclamo", class: "btn btn-primary" %>
  </div>
<% end %>

